<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="-Infinity" prefHeight="240.0" prefWidth="400.0" spacing="10.0" style="-fx-background-color: white; -fx-border-color: gray;" styleClass="@/application/menu.css" stylesheets="@/application/menu.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.TimeDeliveryController">
   <children>
      <Label text="Thời gian nhận hàng" textFill="#532b12">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <VBox>
         <children>
            <Label text="Ngày">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets left="80.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER" prefHeight="50.0" styleClass="shadow-card" stylesheets="@menu.css">
               <children>
                  <DatePicker fx:id="Date" prefHeight="30.0" prefWidth="200.0" style="-fx-background-color: white; -fx-border-color: #532b12; -fx-border-radius: 5;" />
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox>
         <children>
            <Label text="Thời gian">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets left="80.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER" prefHeight="50.0" styleClass="shadow-card" stylesheets="@menu.css">
               <children>
                  <ComboBox fx:id="cbTime" prefHeight="30.0" prefWidth="200.0" style="-fx-background-color: white; -fx-border-color: #532b12; -fx-border-radius: 5;" />
               </children>
            </HBox>
         </children>
      </VBox>
      <Button maxWidth="100.0" mnemonicParsing="false" onAction="#confirmTime" prefHeight="40.0" styleClass="btn-addtocart" text="Xác nhận" />
   </children>
   <padding>
      <Insets bottom="20.0" />
   </padding>
</VBox>
