<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" spacing="10.0" style="-fx-background-color: white;" styleClass="@/application/menu.css" stylesheets="@/application/menu.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.AddressSelectionController">
   <children>
      <Label text="Chọn địa chỉ">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <VBox prefHeight="300.0" prefWidth="400.0" spacing="10">
         <VBox>
            <children>
               <Label text="Tỉnh/thành phố">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
               <HBox prefHeight="30.0" prefWidth="400.0" styleClass="shadow-card" stylesheets="@menu.css">
                  <children>
                     <ComboBox fx:id="cbProvince" prefHeight="30.0" prefWidth="300.0" style="-fx-background-color: white; -fx-border-color: #532b12; -fx-border-radius: 5;" />
                  </children>
               </HBox>
            </children>
            <padding>
               <Insets left="55.0" />
            </padding>
         </VBox>
         <VBox layoutX="10.0" layoutY="10.0">
            <children>
               <Label text="Quận/Huyện">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
               <HBox prefHeight="30.0" prefWidth="400.0" styleClass="shadow-card" stylesheets="@menu.css">
                  <children>
                     <ComboBox fx:id="cbDistrict" prefHeight="30.0" prefWidth="300.0" style="-fx-background-color: white; -fx-border-color: #532b12; -fx-border-radius: 5;" />
                  </children>
               </HBox>
            </children>
            <padding>
               <Insets left="55.0" />
            </padding>
         </VBox>
         <VBox layoutX="10.0" layoutY="207.0">
            <children>
               <Label text="Phường/Xã">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
               <HBox prefHeight="30.0" prefWidth="400.0" styleClass="shadow-card" stylesheets="@menu.css">
                  <children>
                     <ComboBox fx:id="cbWard" prefHeight="30.0" prefWidth="300.0" style="-fx-background-color: white; -fx-border-color: #532b12; -fx-border-radius: 5;" />
                  </children>
               </HBox>
            </children>
            <padding>
               <Insets left="55.0" />
            </padding>
         </VBox>
         <VBox layoutX="10.0" layoutY="132.0">
            <children>
               <Label text="Địa chỉ">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
               <TextArea fx:id="tAreaAddress" prefHeight="88.0" prefWidth="305.0" style="-fx-background-color: white; -fx-border-color: #532b12; -fx-border-radius: 5;">
                  <VBox.margin>
                     <Insets />
                  </VBox.margin>
               </TextArea>
               <HBox prefHeight="0.0" prefWidth="305.0" styleClass="shadow-card" stylesheets="@menu.css" />
            </children>
            <padding>
               <Insets left="55.0" />
            </padding>
            <VBox.margin>
               <Insets right="40.0" />
            </VBox.margin>
         </VBox>
      </VBox>
       
          <!-- Nút xác nhận -->
       <Button onAction="#handleSelectAddress" styleClass="btn-addtocart" text="Chọn Địa chỉ" />
   </children>
</VBox>
